					<CustomTile class="myCustomTile" press="onTilePress">
						<content>
							<GenericTile class="tileLayout" header="{Name}" subheader="{Description}" frameType="TwoByOne" press="press">
								<tileContent>
									<TileContent unit="" footer="" class="tileLayoutRight">
										<content>
											<NumericContent value="{Solde}" icon="" valueColor="Good" scale="â‚¬"/>
										</content>
									</TileContent>
								</tileContent>
							</GenericTile>
						</content>
					</CustomTile>
				</tiles>
			</TileContainer>
		</semantic:content>

	</semantic:FullscreenPage>

</mvc:View>
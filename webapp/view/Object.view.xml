<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table"
	xmlns:u="sap.ui.unified" controllerName="budget.controller.Object">
	<semantic:FullscreenPage id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>objectTitle}" busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">
		<semantic:content>
			<ObjectHeader id="objectHeader" title="{Description}" number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€"
				backgroundDesign="Transparent" icon="sap-icon://loan" condensed="true" fullScreenOptimized="true"
				numberState="{path:'Solde', formatter:'.formatter.soldeState'}">
				<attributes>
					<ObjectAttribute active="false" id="__attribute39" text="{Name}"/>
				</attributes>
			</ObjectHeader>
			<Panel expandable="true" expanded="true">
				<content>
					<HBox width="100%" id="__hbox0">
						<items>
							<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" layout="ResponsiveGridLayout" id="__form1"
								breakpointM="300" width="400px" labelSpanM="5" labelSpanL="6">
								<sap.ui.layout.form:content>
									<core:Title text="Title" id="__title0"/>
									<Label text="Année"/>
									<ComboBox items="{appView>/years}" maxWidth="" selectedKey="{objectView>/year}" selectionChange="onSelectionChange">
										<items>
											<core:ListItem text="{appView>description}" key="{appView>id}"/>
										</items>
									</ComboBox>
									<Label text="Mois"/>
									<ComboBox items="{appView>/months}" maxWidth="" selectedKey="{objectView>/month}" selectionChange="onSelectionChange">
										<items>
											<core:ListItem text="{appView>description}" key="{appView>id}"/>
										</items>
									</ComboBox>
									<Label text="Solde début du mois"/>
									<ObjectNumber number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Dépenses"/>
									<ObjectNumber number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Dont carte"/>
									<ObjectNumber number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Epargne"/>
									<ObjectNumber number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€" textAlign="End" class="numberFormat"/>
									<Label text="Solde"/>
									<ObjectNumber number="{ path: 'Solde', formatter: '.formatter.numberUnit' }" numberUnit="€" textAlign="End" class="numberFormat"/>
								</sap.ui.layout.form:content>
							</sap.ui.layout.form:SimpleForm>
						</items>
					</HBox>
				</content>
			</Panel>
			<table:Table id="table" selectionMode="MultiToggle" visibleRowCount="7" enableSelectAll="false" threshold="150" enableBusyIndicator="true"
				ariaLabelledBy="title" visibleRowCountMode="Auto">
				<table:noData>
					<BusyIndicator class="sapUiMediumMargin"/>
				</table:noData>
				<table:toolbar>
					<Toolbar>
						<Title id="title" text="Products"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://refresh" tooltip="Reinitialize Model" press="onModelRefresh"/>
					</Toolbar>
				</table:toolbar>
				<table:columns>
					<table:Column sortProperty="Date" filterProperty="Date" autoResizable="true" width="7rem">
						<Label text="Date"/>
						<table:template>
							<Text text="{path:'Date', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium'}}"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="AffectationId" filterProperty="AffectationId" autoResizable="true" width="12rem">
						<Label text="Affectation"/>
						<table:template>
							<ComboBox items="{/Affectations}" maxWidth="" selectedKey="{AffectationId}" selectionChange="onSelectionChange">
								<items>
									<core:ListItem text="{Description}" key="{id}"/>
								</items>
							</ComboBox>
						</table:template>
					</table:Column>
					<table:Column sortProperty="Description" filterProperty="Description" autoResizable="true">
						<Label text="Description"/>
						<table:template>
							<Text text="{Description}"/>
						</table:template>
					</table:Column>
					<table:Column filterProperty="Debit" width="9rem">
						<Label text="Debit"/>
						<table:template>
							<!--<u:Currency value="{ path: 'Debit', type: 'sap.ui.model.type.Float' }"/>-->
							<ObjectNumber number="{ path: 'Debit', formatter: '.formatter.numberUnit' }" textAlign="End" />
						</table:template>
					</table:Column>
					<table:Column filterProperty="Credit" width="9rem">
						<Label text="Credit"/>
						<table:template>
							<ObjectNumber number="{ path: 'Credit', formatter: '.formatter.numberUnit' }" textAlign="End" />
							<!--<u:Currency value="{ path: 'Credit', type: 'sap.ui.model.type.Float' }" />-->
						</table:template>
					</table:Column>
				</table:columns>
				<!--				<footer>
					<m:Toolbar>
						<m:Label text="OData Model Operation Mode:" labelFor="operationMode"/>
						<m:SegmentedButton id="operationMode" select="onOperationModeChange" selectedKey="{ui>selectedOperationMode}" items="{ui>/operationModes}">
							<m:items>
								<m:SegmentedButtonItem text="{ui>name}" key="{ui>name}"/>
							</m:items>
						</m:SegmentedButton>
						<m:ToolbarSpacer/>
						<m:Button icon="sap-icon://hint" tooltip="Show information" press="showInfo"/>
					</m:Toolbar>
				</footer>-->
			</table:Table>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>
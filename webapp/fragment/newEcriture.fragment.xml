<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
			<Dialog title="Nouvelle Ã©criture" contentWidth="600px">
			<content>
	<form:SimpleForm editable="true" layout="ResponsiveGridLayout" width="100%" breakpointM="500">
		<form:content>
			<core:Title text="Nouvelle Ecriture"/>
			<Label text="Date" required="true"/>
			<DatePicker width="100%" secondaryCalendarType="Gregorian" id="newDate" value="{path:'Date', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium'}}" minDate="{newView>/minDate}" maxDate="{newView>/maxDate}"/>
			<Label xmlns="sap.m" text="Affectation" required="true"/>
			<ComboBox items="{ path:'appView>/Affectations', sorters:{ path:'appView&gt;Description' }}" maxWidth="" selectedKey="{AffectationId}" selectionChange="onSelectionChange" width="100%">
				<items>
					<core:ListItem xmlns:core="sap.ui.core" text="{appView>Description}" key="{appView>id}"/>
				</items>
			</ComboBox>
			<Label text="Description" width="100%"/>
			<Input width="100%" value="{Description}" maxLength="40" fieldWidth="100%"/>
			<Label text="Montant" width="100%"/>
			<Input width="100%" value="{newView>/montant}" maxLength="10" fieldWidth="100%"/>
			<ToggleButton text="{newView>/textDebitCredit}" press="onTogglePress" width="8rem" pressed="{newView>/debitCredit}" type="Transparent" icon="{newView>/iconDebitCredit}">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</ToggleButton>
			<!--<Switch customTextOff="Debit" customTextOn="Credit" state="{newView>/debitCredit}"/>-->
			<Label text="Carte" width="100%"/>
			<CheckBox selected="{newView>/carte}"/>
		</form:content>
	</form:SimpleForm>
	</content>
	<beginButton><Button icon="sap-icon://save" type="Transparent" enabled="{newView>/saveEnabled}"/></beginButton>
	<endButton><Button icon="sap-icon://sys-cancel" type="Transparent" press="onDialogCancel"/></endButton>
	</Dialog>
	
	
</core:FragmentDefinition>